{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es2016",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "jsx": "react"
    },
    "include": [
      "src/**/*"
    ],
     "types": [
        "babylonjs",
        "babylonjs-materials",
        "babylonjs-loaders"
    ]
}
